 @import 'bootstrap';
 @import 'alertify';
 @import 'alertify/default';
 @import 'alertify/bootstrap';

 .navbar-default {
	background-color: #EEE;
 }
 
 body {
 	position: relative;
 	font-size: 16px;
 }

 #presenter {
 	position: relative;
 	height: 500px;
 }
	
 #member-subscription {
 	position: relative;

 	form {
 		input[type=email], input[type=cel], select, 
 		input[type=text], input[type=date] {
		 position: relative;
 		 height: 50px;
 		}
 		input[type=submit] {
		 position: relative;
		 width: 210px;
		 border-radius: 25px;
		 margin-top: 10px;
		 padding: 13px;
 		}
 	}
 }	
 #contact {
 	margin-top: 50px;
	margin-bottom: 50px;
	form {
	 position: relative;
	 input[type=text], input[type=email], textarea {
		height: 44px;
		border: 2px solid #999;
		border-radius: 0px;
	 }
	 textarea {
	 	position: relative;
	 	height: 120px;
	 }
	 input[type=submit] {
	 	border-radius: 25px;
	 }
	}
 } 

 footer {
 	margin-bottom: 0px !important;
 }